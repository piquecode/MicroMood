<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <data>
                <import type="com.piquecode.micromood.BuildConfig"/>
        </data>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/about_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorSurface"
                android:orientation="vertical">

                <!-- App Icon -->
                <ImageView
                        android:id="@+id/app_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/app_name"
                        android:minWidth="128dp"
                        android:minHeight="128dp"
                        android:paddingTop="48dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"/>

                <!-- Version Text -->
                <TextView
                        android:id="@+id/version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:paddingTop="16dp"
                        android:paddingBottom="64dp"
                        android:text="@{@string/version(BuildConfig.VERSION_NAME, BuildConfig.VERSION_CODE)}"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        app:layout_anchor="@id/app_icon"
                        app:layout_anchorGravity="bottom"
                        tools:text="2.0.0 (2)"/>

                <!-- Content Cards -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical"
                        app:layout_anchor="@id/version"
                        app:layout_anchorGravity="bottom">

                        <!-- Contact Card -->
                        <com.google.android.material.card.MaterialCardView
                                android:id="@+id/contact"
                                style="@style/Widget.MaterialComponents.CardView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="12dp"
                                android:clickable="true"
                                android:focusable="true"
                                app:cardBackgroundColor="?attr/colorSurface"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="2dp"
                                app:contentPadding="16dp"
                                app:rippleColor="?attr/colorControlHighlight">

                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/contact_us"
                                        android:textColor="?android:attr/textColorPrimary"
                                        android:textSize="16sp"/>
                                </com.google.android.material.card.MaterialCardView>

                                <!-- Website Card -->
                                <com.google.android.material.card.MaterialCardView
                                        android:id="@+id/website"
                                        style="@style/Widget.MaterialComponents.CardView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginBottom="12dp"
                                        android:clickable="true"
                                        android:focusable="true"
                                        app:cardBackgroundColor="?attr/colorSurface"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="2dp"
                                        app:contentPadding="16dp"
                                        app:rippleColor="?attr/colorControlHighlight">

                                        <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/visit_website"
                                                android:textColor="?android:attr/textColorPrimary"
                                                android:textSize="16sp"/>
                                        </com.google.android.material.card.MaterialCardView>

                                        <!-- Contribute Card -->
                                        <com.google.android.material.card.MaterialCardView
                                                android:id="@+id/contribute"
                                                style="@style/Widget.MaterialComponents.CardView"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="16dp"
                                                android:layout_marginEnd="16dp"
                                                android:layout_marginBottom="12dp"
                                                android:clickable="true"
                                                android:focusable="true"
                                                app:cardBackgroundColor="?attr/colorSurface"
                                                app:cardCornerRadius="16dp"
                                                app:cardElevation="2dp"
                                                app:contentPadding="16dp"
                                                app:rippleColor="?attr/colorControlHighlight">

                                                <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:text="@string/contribute"
                                                        android:textColor="?android:attr/textColorPrimary"
                                                        android:textSize="16sp"/>
                                                </com.google.android.material.card.MaterialCardView>

                                                <!-- Divider -->
                                                <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="1dp"
                                                        android:layout_marginHorizontal="32dp"
                                                        android:layout_marginVertical="16dp"
                                                        android:background="?android:attr/listDivider"/>

                                                <!-- Preferences Fragment -->
                                                <fragment
                                                        android:id="@+id/preference_fragment"
                                                        android:name="com.piquecode.micromood.about.PreferenceFragment"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginHorizontal="16dp"/>
                                                </LinearLayout>

                                                <!-- Konfetti overlay -->
                                                <nl.dionsegijn.konfetti.KonfettiView
                                                        android:id="@+id/confetti"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"/>
                                                </androidx.coordinatorlayout.widget.CoordinatorLayout>
                                        </layout>
